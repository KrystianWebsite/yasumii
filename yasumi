<!-- SUWAK PRZED/PO (zablokowany na 0 lub 100) -->
<script>
  const slider = document.getElementById('slider');
  const afterContainer = document.getElementById('afterContainer');

  // Po zwolnieniu suwaka => przenosimy na skrajną wartość
  slider.addEventListener('change', function() {
    let val = parseInt(this.value, 10);
    if (val < 50) {
      val = 0;
    } else {
      val = 100;
    }
    this.value = val;
    afterContainer.style.width = val + '%';
  });

  // W trakcie przesuwania => podgląd
  slider.addEventListener('input', function() {
    let val = parseInt(this.value, 10);
    afterContainer.style.width = val + '%';
  });
</script>

</body>
</html>
